<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./images/logo.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Pinyon+Script&display=swap"
      rel="stylesheet"
    />
    <title>Memory Lane</title>
    <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <div class="header">
      <div class="title-background">
        <h1>memory lane</h1>
      </div>

      <nav>
        <ul>
          <li onclick="deleteImage()" id="edit">edit</li>
          <li onclick="chooseImage()">upload</li>
          <li onclick="shareOnInstagram()">share</li>
        </ul>
      </nav>

      <form
        action="/"
        method="post"
        id="uploadForm"
        enctype="multipart/form-data"
      >
        <input
          type="file"
          name="image"
          accept="image/*"
          class="inp-img"
          id="input-control"
          required
          onchange="submitForm()"
        />
      </form>
    </div>

    <div class="slideshow-container gallery">
      <a class="prev slide-btn" id="prev" onclick="plusSlides(-1)">❮</a>
      <% galleryItems.forEach((item, index) => { %>
      <div class="mySlides fade" dataInfo="<%= item.id %>">
        <img
          src="data:<%= item.image.contentType %>;base64,<%= item.image.data.toString('base64') %>"
          alt="<%= item.title %>"
        />
      </div>
      <% }); %>

      <a class="next slide-btn" id="next" onclick="plusSlides(1)">❯</a>
    </div>

    <div class="footer">
      <p>memories are forever</p>
    </div>

    <script src="./script.js"></script>
  </body>
</html>
